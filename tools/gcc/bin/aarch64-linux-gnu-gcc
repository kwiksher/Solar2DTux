#!/bin/bash
BASE=/usr/local/aarch64-linux-gnu-gcc/bin
SYSROOT="$HOME/Documents/work/sysroot_ubuntu"
TARGET=aarch64-linux-gnu
TOOLCHAIN=/usr/local/aarch64-linux-gnu-gcc
LIBPATH="${SYSROOT}/usr/lib/gcc/aarch64-linux-gnu"

exec env LD_LIBRARY_PATH=="${LIBPATH}" \
    "${BASE}/${TARGET}-gcc" \
        --sysroot="${SYSROOT}" \
        -isysroot "${SYSROOT}" \
        -L"${SYSROOT}/usr/lib/${TARGET}" \
		-v \
        "$@"  

#        -I"${SYSROOT}/usr/include" \
